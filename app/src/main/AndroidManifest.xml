<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yuki.vision"
    >

    <!-- 访问网络 -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.yuki.xndroid.base.XApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >

        <!-- 配置框架设置 -->
        <meta-data
            android:name="com.yuki.vision.app.AppConfig"
            android:value="AppConfig"
            />

        <activity
            android:name="com.yuki.vision.SplashActivity"
            android:theme="@style/AppTheme.FullScreen"
            />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".module.home.search.SearchActivity" />
        <activity android:name=".module.video.VideoActivity" />
        <activity android:name=".module.discovery.category.detail.CategoryDetailActivity" />
    </application>

</manifest>